    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "startDebug",
            "command": "${workspaceFolder}/make/debug.bat",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "startRelease",
            "command": "${workspaceFolder}/make/release.bat",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "makeNumber",
            "command": "${workspaceFolder}/make/makeNumberProject.bat",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}