{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "startDebug",
            "command": "${workspaceFolder}/make/debug.bat",
            //"command" : "${workspaceFolder}/make/debug.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/make/"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "startRelease",
            "command": "${workspaceFolder}/make/release.bat",
            //"command" : "${workspaceFolder}/make/release.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/make/"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
        ,
        {
            "type": "shell",
            "label": "makeDM4th",
            "command": "${workspaceFolder}/make/makeDM4thProject.bat",
            //"command" : "${workspaceFolder}/make/makeDM4thProject.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/make/"
            },
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "type": "shell",
            "label": "getAssemblyRelease",
            "command": "${workspaceFolder}/make/assemblyRelease.bat",
            //"command" : "${workspaceFolder}/make/makeDM4thProject.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/make/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}