{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type" : "shell",
            "label": "startRelease",
            "command": "g++",
            "args": ["-Wall", "-pedantic", "-O2", "-o", "${fileBasenameNoExtension}.exe", "${file}", "-fopenmp", "-D", "DM4thParallel"],
            "group":{
                "kind" : "build",
                "isDefault": true
            }
        },
        {
            "type" : "shell",
            "label": "startDebug",
            "command": "g++",
            "args": ["-Wall", "-pedantic", "-ggdb", "-o", "${fileBasenameNoExtension}.exe", "${file}", "-fopenmp"],
        },
    ]
}