    "version": "2.0.0",
    "tasks": [
        {
            "type" : "shell",
            "label": "startDebug",
            "command": "g++",
            "args": ["-Wall", "-pedantic", "-ggdb", "-o", "main.exe", "main.cpp", "-fopenmp"],
            "group":{
                "kind" : "build",
                "isDefault": true
            }
        },
        {
            "type" : "shell",
            "label": "startRelease",
            "command": "g++",
            "args": ["-Wall", "-pedantic", "-O2", "-o", "main.exe", "main.cpp", "-fopenmp", "-D", "DM4thParallel"]
        }
